<Window x:Class="WakFocus.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WakFocus - Settings"
        Width="600" Height="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Hotkey Section -->
        <GroupBox Grid.Row="0" Header="Global Hotkey">
            <StackPanel>
                <TextBlock Text="Click below and press the key combination you want:" FontWeight="SemiBold"/>

                <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="3"
                        Background="#F9F9F9" Margin="0,10,0,0" Padding="12,10">
                    <TextBox x:Name="HotkeyTextBox"
                             Text="F4"
                             IsReadOnly="True"
                             BorderThickness="0"
                             Background="Transparent"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Cursor="Hand"
                             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                             GotFocus="HotkeyTextBox_GotFocus"
                             LostFocus="HotkeyTextBox_LostFocus"/>
                </Border>

                <TextBlock Text="ðŸ’¡ Tip: Try F2, F3, F4, or combinations like Ctrl+Alt+W"
                           FontSize="11" Foreground="Gray" Margin="0,8,0,0" FontStyle="Italic"/>
            </StackPanel>
        </GroupBox>

        <!-- Scrollable content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Window Ordering -->
                <GroupBox Header="Window Order">
                    <StackPanel>
                        <TextBlock Text="Drag windows to set the cycling order:" FontWeight="SemiBold"/>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                            <Button x:Name="RefreshWindowsButton" Content="ðŸ”„ Scan Windows" Width="120" Height="28"
                                    Click="RefreshWindowsButton_Click"/>
                            <TextBlock x:Name="WindowCountLabel" Text="0 windows found" VerticalAlignment="Center"
                                     Margin="10,0,0,0" FontSize="11" Foreground="Gray"/>
                        </StackPanel>

                        <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="3" Background="#F9F9F9" MaxHeight="200">
                            <ListBox x:Name="DetectedWindowsListBox"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     AllowDrop="True"
                                     PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                                     PreviewMouseMove="ListBox_PreviewMouseMove"
                                     Drop="ListBox_Drop"
                                     DragOver="ListBox_DragOver">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="8" Background="White" Margin="2" CornerRadius="2"
                                                BorderBrush="#E0E0E0" BorderThickness="1">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding Subtitle}" FontSize="11" Foreground="Gray"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                        <TextBlock Text="ðŸ’¡ Tip: Drag to reorder â€¢ Top window cycles first"
                                 FontSize="10" Foreground="Gray" Margin="0,5,0,0" FontStyle="Italic"/>
                    </StackPanel>
                </GroupBox>

                <!-- Target Windows -->
                <GroupBox Header="Target Windows">
                    <StackPanel>
                        <TextBlock Text="Which windows should be included in the cycle?" FontWeight="SemiBold"/>
                        <TextBlock Text="Process Name (e.g., java.exe for Wakfu):" Margin="0,10,0,5"/>
                        <TextBox x:Name="ProcessNameTextBox" Width="400" HorizontalAlignment="Left"/>

                        <TextBlock Text="Window Title Contains (optional, regex):" Margin="0,10,0,5"/>
                        <TextBox x:Name="TitleFilterTextBox" Width="400" HorizontalAlignment="Left"/>

                        <TextBlock Margin="0,10,0,0" FontSize="11" Foreground="Gray" TextWrapping="Wrap">
                            Examples: java.exe (Wakfu), notepad.exe (testing), chrome.exe
                        </TextBlock>
                    </StackPanel>
                </GroupBox>

                <!-- Options -->
                <GroupBox Header="Options">
                    <StackPanel>
                        <CheckBox x:Name="IncludeMinimizedCheckBox" Content="Include minimized windows" IsChecked="True"/>
                        <TextBlock Text="Restore and activate minimized windows"
                                 FontSize="11" Foreground="Gray" Margin="20,0,0,8"/>

                        <CheckBox x:Name="CompatFallbackCheckBox" Content="Enable compatibility fallback"/>
                        <TextBlock Text="Uses AttachThreadInput to force-activate stubborn windows"
                                 FontSize="11" Foreground="Gray" Margin="20,0,0,0"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="SaveButton" Content="Save" Width="100" Height="30"
                    Margin="0,0,10,0" Click="SaveButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="30"
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
