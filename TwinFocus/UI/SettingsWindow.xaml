<Window x:Class="TwinFocus.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TwinFocus - Settings"
        Width="600" Height="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Hotkey Section -->
        <GroupBox Grid.Row="0" Header="Global Hotkey">
            <StackPanel>
                <TextBlock Text="Press this key combination to cycle windows:" FontWeight="SemiBold"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <CheckBox x:Name="ModCtrl" Content="Ctrl" Margin="0,0,15,0"/>
                    <CheckBox x:Name="ModAlt" Content="Alt" Margin="0,0,15,0"/>
                    <CheckBox x:Name="ModShift" Content="Shift" Margin="0,0,15,0"/>
                    <CheckBox x:Name="ModWin" Content="Win" Margin="0,0,15,0"/>
                </StackPanel>

                <TextBlock Text="Key:" Margin="0,10,0,5"/>
                <ComboBox x:Name="KeyComboBox" Width="200" HorizontalAlignment="Left">
                    <ComboBoxItem Content="F1" Tag="F1"/>
                    <ComboBoxItem Content="F2" Tag="F2"/>
                    <ComboBoxItem Content="F3" Tag="F3"/>
                    <ComboBoxItem Content="F4" Tag="F4" IsSelected="True"/>
                    <ComboBoxItem Content="F5" Tag="F5"/>
                    <ComboBoxItem Content="F6" Tag="F6"/>
                    <ComboBoxItem Content="F7" Tag="F7"/>
                    <ComboBoxItem Content="F8" Tag="F8"/>
                    <ComboBoxItem Content="F9" Tag="F9"/>
                    <ComboBoxItem Content="F10" Tag="F10"/>
                    <ComboBoxItem Content="F11" Tag="F11"/>
                    <ComboBoxItem Content="F12" Tag="F12"/>
                    <ComboBoxItem Content="A" Tag="A"/>
                    <ComboBoxItem Content="B" Tag="B"/>
                    <ComboBoxItem Content="C" Tag="C"/>
                    <ComboBoxItem Content="D" Tag="D"/>
                    <ComboBoxItem Content="E" Tag="E"/>
                    <ComboBoxItem Content="F" Tag="F"/>
                    <ComboBoxItem Content="G" Tag="G"/>
                    <ComboBoxItem Content="H" Tag="H"/>
                    <ComboBoxItem Content="I" Tag="I"/>
                    <ComboBoxItem Content="J" Tag="J"/>
                    <ComboBoxItem Content="K" Tag="K"/>
                    <ComboBoxItem Content="L" Tag="L"/>
                    <ComboBoxItem Content="M" Tag="M"/>
                    <ComboBoxItem Content="N" Tag="N"/>
                    <ComboBoxItem Content="O" Tag="O"/>
                    <ComboBoxItem Content="P" Tag="P"/>
                    <ComboBoxItem Content="Q" Tag="Q"/>
                    <ComboBoxItem Content="R" Tag="R"/>
                    <ComboBoxItem Content="S" Tag="S"/>
                    <ComboBoxItem Content="T" Tag="T"/>
                    <ComboBoxItem Content="U" Tag="U"/>
                    <ComboBoxItem Content="V" Tag="V"/>
                    <ComboBoxItem Content="W" Tag="W"/>
                    <ComboBoxItem Content="X" Tag="X"/>
                    <ComboBoxItem Content="Y" Tag="Y"/>
                    <ComboBoxItem Content="Z" Tag="Z"/>
                </ComboBox>

                <TextBlock x:Name="CurrentHotkeyLabel" Margin="0,10,0,0" FontStyle="Italic" Foreground="Gray"/>
            </StackPanel>
        </GroupBox>

        <!-- Scrollable content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Window Ordering -->
                <GroupBox Header="Window Ordering">
                    <StackPanel>
                        <TextBlock Text="How should windows be ordered when cycling?"/>
                        <RadioButton x:Name="OrderScreen" Content="Screen Layout (Top â†’ Bottom)"
                                   GroupName="Ordering" IsChecked="True" Margin="0,8,0,5"/>
                        <TextBlock Text="Best for stacked fullscreen game windows"
                                 FontSize="11" Foreground="Gray" Margin="20,0,0,8"/>

                        <RadioButton x:Name="OrderLastActive" Content="Last Active"
                                   GroupName="Ordering" Margin="0,0,0,5"/>
                        <TextBlock Text="Most recently used window comes first"
                                 FontSize="11" Foreground="Gray" Margin="20,0,0,8"/>

                        <RadioButton x:Name="OrderManual" Content="Manual Order (Advanced)"
                                   GroupName="Ordering" Margin="0,0,0,5"/>
                        <TextBlock Text="Edit config.json to customize"
                                 FontSize="11" Foreground="Gray" Margin="20,0,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Target Windows -->
                <GroupBox Header="Target Windows">
                    <StackPanel>
                        <TextBlock Text="Which windows should be included in the cycle?" FontWeight="SemiBold"/>
                        <TextBlock Text="Process Name (e.g., java.exe for Wakfu/Dofus):" Margin="0,10,0,5"/>
                        <TextBox x:Name="ProcessNameTextBox" Width="400" HorizontalAlignment="Left"/>

                        <TextBlock Text="Window Title Contains (optional, regex):" Margin="0,10,0,5"/>
                        <TextBox x:Name="TitleFilterTextBox" Width="400" HorizontalAlignment="Left"/>

                        <TextBlock Margin="0,10,0,0" FontSize="11" Foreground="Gray" TextWrapping="Wrap">
                            Examples: java.exe (Wakfu/Dofus), notepad.exe (testing), chrome.exe
                        </TextBlock>
                    </StackPanel>
                </GroupBox>

                <!-- Options -->
                <GroupBox Header="Options">
                    <StackPanel>
                        <CheckBox x:Name="IncludeMinimizedCheckBox" Content="Include minimized windows" IsChecked="True"/>
                        <TextBlock Text="Restore and activate minimized windows"
                                 FontSize="11" Foreground="Gray" Margin="20,0,0,8"/>

                        <CheckBox x:Name="CompatFallbackCheckBox" Content="Enable compatibility fallback"/>
                        <TextBlock Text="Use advanced activation technique for stubborn windows"
                                 FontSize="11" Foreground="Gray" Margin="20,0,0,8"/>

                        <CheckBox x:Name="OsdEnabledCheckBox" Content="Show on-screen display (OSD)" IsChecked="True"/>
                        <TextBlock Text="Display window name when switching (coming soon)"
                                 FontSize="11" Foreground="Gray" Margin="20,0,0,0"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="SaveButton" Content="Save" Width="100" Height="30"
                    Margin="0,0,10,0" Click="SaveButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="30"
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
